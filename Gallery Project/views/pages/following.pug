html 
  head 
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title Hello User
    link(rel="stylesheet" href= "https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js")
    script(src="/client.js")
    link(rel = 'stylesheet', type = 'text/css', href = '/styles.css')
    body
        nav(class="navbar navbar-default")
            div(class="container-fluid")
                -let myString =  `${following.username}`
                -let link = "http://localhost:3000/loginn/:"+  `${following.username}`
                ul(class="nav navbar-nav")
                    li(class="")
                        a(href= `${link}`) Explore
                    li(class="")
                        a(href='/'+myString+"/search") Search
                    li(class="")
                        a(href='javascript:getFollowing("'+ myString +'")') Following
                    li(class="")
                        a(href='javascript:getLiked("'+ myString +'")') Liked
                    li(class="")
                        a(href='javascript:getReviewed("'+ myString +'")') Reviewed
                    li(class="")
                        a(href='javascript:getNotif("'+ myString +'")') Notifications
                    -if(following.isArtist == false){
                        li(class="")
                            a(href='javascript:getArtistProfile("'+ myString +'")') Artist Mode
                    -} else if(following.isArtist == true){
                        li(class="")
                            a(href='javascript:getArtistProfile("'+ myString +'")') Patron Mode
                        li(class="")
                            a(href='/'+myString+"/uploadArt") Upload Art
                        li(class="")
                            a(href='/'+myString+"/addworkshop") Host Workshop
                    -}
                    li(class="" )
                        a(href="javascript:logout()") Log Out  
        h2 You are following:
        each item in following.list
            - let name = (item.username).replaceAll("-", " ");
            - let namespace = "http://localhost:3000/artist/"+ item.username;
            a(href = `${namespace}`)
                h4 #{name}
            //-  - let val = (stuff[0].artInfo.artist).replaceAll(" ", "-");
            button(id ="" type = "submit" class ="like" onclick = 'followArtist("'+ item.username +'")') Follow